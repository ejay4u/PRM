                    </tfoot>
                </table>
            </div>
            <!-- /.box-body -->
        </div>
        <!-- /.box -->
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function () {

            $('#Examination_ExaminationType').prop("disabled", true);
            $('#Examination_InternalClient').prop("disabled", true);
            $('#Examination_DirectService').prop("disabled", true);
            $('#Examination_CooperateClient').prop("disabled", true);


            $('#Category-DropdownID').change(function () {
                if (this.value !== "") {
                    $('#Examination_ExaminationType').prop("disabled", false);
                    $('#examType').show();

                    if (this.value === "Computed Tomography (CT SCANS)") {
                        $('#cAdult').show();
                        $('#cChildren').show();
                        $('#intClient').hide();
                        $('#dirClient').hide();
                        $('#cooClient').hide();
                    }
                    else {
                        $('#cAdult').hide();
                        $('#cChildren').hide();
                        $('#intClient').show();
                        $('#dirClient').show();
                        $('#cooClient').show();
                        $('#Examination_InternalClient').prop("disabled", false);
                        $('#Examination_DirectService').prop("disabled", false);
                        $('#Examination_CooperateClient').prop("disabled", false);
                    }
                }
                else {
                    $('#cAdult').hide();
                    $('#cChildren').hide();
                    $('#intClient').show();
                    $('#dirClient').show();
                    $('#cooClient').show();
                    $('#Examination_ExaminationType').prop("disabled", true);
                    $('#Examination_InternalClient').prop("disabled", true);
                    $('#Examination_DirectService').prop("disabled", true);
                    $('#Examination_CooperateClient').prop("disabled", true);
                }
                
            });

            //Datemask dd/mm/yyyy
            $("#datemask").inputmask("dd/mm/yyyy", { "placeholder": "dd/mm/yyyy" });


            $("#ExaminationTable").dataTable({
                ajax: {
                    url: "/api/Examination",
                    dataSrc: ""
                },
                dom: 'Bfrtip',
                buttons: [
                    'copyHtml5',
                    'excelHtml5',
                    'csvHtml5',
                    'pdfHtml5'
                ],
                columns: [
                    {
                        data: "Id"
                    },
                    {
                        data: "Category"
                    },
                    {
                        data: "ExaminationType"
                    },
                    {
                        data: "InternalClient"
                    },
                    {
                        data: "DirectService"
                    },
                    {
                        data: "CooperateClient"
                    },
                    {
                        data: "CtAdult"
                    },
                    {
                        data: "CtChildren"
                    },
                    {
                        data: "Status"
                    },
                    {
                        data: "CreatedBy"
                    },
                    {
                        data: "TimeCreated",
                        render: function (data, type, Examination) {
                            return new Date(Examination.TimeCreated).toDateString();
                        }
                    },
                    {
                        data: "UpdatedBy"
                    },
                    {
                        data: "TimeUpdated",
                        render: function (data, type, Examination) {
                            return new Date(Examination.TimeUpdated).toDateString();
                        }
                    },
                    {
                        data: "Id",
                        render: function (data, type, Examination) {
                            return "<a title='Details' class='btn btn-sm btn-info' href='/dashboard/Examinationdetails/" +
                                Examination.Id + "'><i class='fa fa-hand-o-left fa-lg' aria-hidden='true'></i></a>" + " | " +
                                "<a title='Edit' class='btn btn-sm btn-primary' href='/dashboard/editExamination/" +
                                Examination.Id + "'><i class='fa fa-pencil-square fa-lg' aria-hidden='true'></i></a>" + " | " +
                                "<a title='Delete' href='#' data-id=" + Examination.Id + " class='js-delete btn btn-sm btn-danger'><i class='fa fa-trash fa-lg' aria-hidden='true'></i></a>";
                        }
                    }
                ]
            });

            $('#ExaminationTable tfoot th').each(function () {
                var placeHolderTitle = $('#ExaminationTable thead th').eq($(this).index()).text();
                $(this).html('<input type="text" class="form-control input input-sm" placeholder = "Search ' + placeHolderTitle + '" />');

                initSearch();
            });

            function initSearch() {
                $('#ExaminationTable').dataTable().api().columns().every(function () {
                    var column = this;
                    $(this.footer()).find('input').on('keyup change', function () {
                        column.search(this.value).draw();
                    });
                });
            }

            $('a.showHide').on("click", function (e) {
                e.preventDefault();
                // Get the column API object
                var column = $('#ExaminationTable').dataTable().api().column($(this).attr('data-column'));
                // Toggle the visibility
                column.visible(!column.visible());

            });

            $('#ExaminationTable tbody').on("click", 'a.js-delete', function () {
                var anchor = $(this);
                bootbox.confirm("Are you sure you want to delete this Examination and all its data?", function (result) {
                    if (result) {
                        var dialog = bootbox.dialog({
                            message: '<p class="text-center"><i class="fa fa-refresh fa-spin"></i> Processing request...</p>',
                            closeButton: false
                        });
                        $.ajax({
                            url: "/api/Examinations/" + anchor.attr("data-id"),
                            method: "DELETE",
                            success: function () {
                                //console.log("success);
                                dialog.modal('hide'); //close the custom dialog
                                $('#ExaminationTable').dataTable().api().row(anchor.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}
