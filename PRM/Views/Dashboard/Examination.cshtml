@model PRM.ViewModels.LabViewModel
@{
    ViewBag.Title = "Examinations";
    Layout = "~/Views/Shared/_Dashboard.cshtml";
    ViewBag.Description = "Manage All Examinations";
}

@using (Html.BeginForm("Examination", "Dashboard"))
{
    @Html.AntiForgeryToken()


    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Add New Examination</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>
            </div>
        </div>
        <div class="box-body">

            <div class="form-horizontal">
                <asp:Label ID="lblUtr" />
                <div class="form-group">
                    @Html.LabelFor(model => model.Examination.Category, new { @class = "control-label col-lg-2" })
                    <div class="col-lg-10">
                        @Html.DropDownListFor(m => m.Examination.Category, Model.CategoryList, "Select Category", new { @id = "Category-DropdownID", htmlAttributes = new { @class = "form-control select2", style = "width: 100%" } })
                        @Html.ValidationMessageFor(model => model.Examination.Category, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="examType" class="form-group">
                    @Html.LabelFor(model => model.Examination.ExaminationType, htmlAttributes: new { @class = "control-label col-lg-2" })
                    <div class="col-sm-10">
                        @Html.EditorFor(model => model.Examination.ExaminationType, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Examination.ExaminationType, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="intClient" class="form-group">
                    <label for="InternalClient" class="control-label col-lg-2">InternalClient Cost</label>
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Examination.InternalClient, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Examination.InternalClient, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="dirClient" class="form-group">
                    <label for="DirectService" class="control-label col-lg-2">DirectService Cost</label>
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Examination.DirectService, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Examination.DirectService, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="cooClient" class="form-group">
                    <label for="CooperateClient" class="control-label col-lg-2">CooperateClient Cost</label>
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Examination.CooperateClient, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Examination.CooperateClient, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="cAdult" class="form-group" hidden>
                    <label for="CtAdult" class="control-label col-lg-2">CT Adult Cost</label>
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Examination.CtAdult, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Examination.CtAdult, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div id="cChildren" class="form-group" hidden>
                    <label for="CtChildren" class="control-label col-lg-2">CT Children Cost</label>
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Examination.CtChildren, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Examination.CtChildren, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.Examination.Status, htmlAttributes: new { @class = "control-label col-lg-2" })
                    <div class="col-lg-10">
                        @Html.EditorFor(model => model.Examination.Status, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Examination.Status, "", new { @class = "text-danger" })
                    </div>
                </div>
                @Html.HiddenFor(model => Model.Id)
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-4">
                        <button type="reset" class="btn btn-default">Cancel</button>
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}

