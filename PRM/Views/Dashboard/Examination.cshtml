                        <a class="showHide btn btn-primary" data-column="3">InternalClient</a>
                        <a class="showHide btn btn-primary" data-column="4">DirectService</a>
                        <a class="showHide btn btn-primary" data-column="5">CooperateClient</a>
                        <a class="showHide btn btn-primary" data-column="6">CtAdult</a>
                        <a class="showHide btn btn-primary" data-column="7">CtChildren</a>
                    </div>
                </div>
            </div>

            <!-- /.box-header -->
            <div class="box-body table-responsive">
                <table id="ExaminationTable" class="table table-bordered table-striped">
                    <thead>
